<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="30dp">

    <!-- Game Title with Glowing Effect -->
    <TextView
        android:id="@+id/tvGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:shadowColor="#FFEB3B"
        android:shadowRadius="20"
        android:elevation="10dp"/>

    <!-- Start Game Button -->
    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:text="Start Game"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_style"
        android:elevation="8dp"
        android:layout_below="@id/tvGameTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"/>

    <!-- Help Button (Below Start Game) -->
    <Button
        android:id="@+id/btnHelp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Help"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_style"
        android:elevation="6dp"
        android:layout_below="@id/btnStartGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- About Button (Below Help, Adjusted Spacing) -->
    <Button
        android:id="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="About"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_style"
        android:elevation="6dp"
        android:layout_below="@id/btnHelp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
